<%= form_for ([@todo_list, @todo_list.todo_items.build]), class: "form-inline", role: "form" do |f| %>
	<div class="form-group">
		<%= f.text_field :title, placeholder: "New Item", class: "form-control" %>
	</div>
	<div class="form-group">
		<div class='input-group date' id='stop'>
			<%= f.time_select :total_time, include_seconds: true%>
		</div>
	</div>
	<button type="submit" class="btn btn-default">Create task</button>
<% end %>