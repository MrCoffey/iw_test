<div class="container">
    <div class="row">
        <div class="col-md-12 text-center">
        	<h1><%= link_to "Task lists", todo_lists_path%></h1>
        </div>

		<p id="notice"><%= notice %></p>

        <div class="col-md-12 col-sm-12">
        	<div class="list-group">

				<% @todo_lists.each do |list|%>
					<div class="list-group-item active">
					    <div class="item row">
				    	    <div class="col-xs-3">
				        	    <h3 class="source"><%=link_to list.title, edit_todo_list_path(@todo_list)%></h3>
				        	    <i class="fa fa-chevron-down"></i>
				            </div>
				            <div class="col-xs-7">
				            	<p class="help-block"><%= list.description %></p>
				            </div>
				            <div class="col-xs-2">
				            	<p class="pubdate pull-rigth"><%= time_ago_in_words(list.created_at)%></p>
				            </div>
				        </div>
					</div>

					<div class="description row">
			        	<div class="col-md-6">&nbsp;</div>
			        		<div class="col-xs-12">	
								<div class="items">
									<%= render list.todo_items %>
									<div class="form-group">
										<%= render 'todo_items/form' %>
									</div>
								</div>
							</div>
						</div>
					</div>			
				<% end %>
				
			</div>
		</div>

	</div>
</div>			
